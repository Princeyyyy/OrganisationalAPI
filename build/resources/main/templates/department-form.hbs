{{#partial "content"}}
    <div class="container">
        <br/>

        <h5 class="text-center">Add Department</h5>
        <hr>
        <form method="Post" action="/adddepartment">
            <div class="form-group">
                <label for="name">Name</label>
                <input type="text" class="form-control" id="name" name="name" placeholder="Department Name">
            </div>
            <div class="form-group">
                <label for="description">Description</label>
                <input class="form-control" id="description" name="description" placeholder="Content">
            </div>

            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>

{{/partial}}
{{> layout.hbs}}