{{#partial "content"}}
    <div class="container">
        <br/>

        <h5 class="text-center">Add User</h5>
        <hr>
        <form method="Post" action="/adduser">
            <div class="form-group">
                <label for="title">Title</label>
                <input type="text" class="form-control" id="title" name="name" placeholder="User Name">
            </div>
            <div class="form-group">
                <label for="position">Position</label>
                <input class="form-control" id="position" name="position" placeholder="User Position">
            </div>
            <div class="form-group">
                <label for="role">Role</label>
                <input class="form-control" id="role" name="role" placeholder="User Role">
            </div>
            <div class="form-group">
                <label for="squad">Department</label>
                <select class="form-control" id="departments" name="department" required>
                    {{#if departments}}
                        {{#each departments}}
                            <option value="{{id}}">{{departmentName}}</option>
                        {{/each}}
                    {{/if}}
                </select>
            </div>

            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>

{{/partial}}
{{> layout.hbs}}